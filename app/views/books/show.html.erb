<h1>New book</h1>
<%= form_with model:@new_book, local:true do |f| %>
  <p>Title</p>
  <%= f.text_field :title %>
  <p>Opinion</p>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<% end %>

<h1>Book detail</h1>
<table>
  <tr>
    <td><%= @book.user.name %></td>
    <td><%= @book.title %></td>
    <td><%= @book.body %></td>
    <td><%= link_to 'Edit', edit_book_path(@book.id) %></td>
    <td><%= link_to 'Destroy', book_path(@book.id), method: :delete, 'data-confirm' => '本当に消しますか？' %></td>
  </tr>
</table>
