<h1>User info</h1>
<table>
  <tr>
    <%= attachment_image_tag @book.user, :profile_image, :fill, 100, 100, format:'jpeg', fallback:"no_image.jpg" %>
  </tr>
  <tr>
    <th>name</th>
    <th><%= @book.user.name %></th>
  </tr>
  <tr>
    <th>introduction</th>
    <th><%= @book.user.introduction %></th>
  </tr>
</table>
<%= link_to 'Edit', edit_user_path(current_user.id) %>

<h1>New book</h1>
<%= form_with model:@new_book, local:true do |f| %>
  <p>Title</p>
  <%= f.text_field :title %>
  <p>Opinion</p>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<% end %>

<h1>Book detail</h1>
<table>
  <tr>
    <td>
      <%= link_to user_path(@book.user.id) do %>
        <%= attachment_image_tag @book.user, :profile_image, :fill, 40, 40, format:'jpeg', fallback:"no_image.jpg", size:'40x40' %>
        <%= @book.user.name %>
      <% end %>
    </td>
    <td><%= @book.title %></td>
    <td><%= @book.body %></td>
    <td><%= link_to 'Edit', edit_book_path(@book.id) %></td>
    <td><%= link_to 'Destroy', book_path(@book.id), method: :delete, 'data-confirm' => '本当に消しますか？' %></td>
  </tr>
</table>
