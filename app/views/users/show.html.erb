<p id = "notice">
  <%= notice %>
</p>

<h2>User info</h2>
<table>
  <tr>
    <th>
      <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format:'jpeg', fallback:"no_image.jpg" %>
    </th>
  </tr>
  <tr>
    <th>name</th>
    <th><%= @user.name %></th>
  </tr>
  <tr>
    <th>introduction</th>
    <th><%= @user.introduction %></th>
  </tr>
</table>
<%= link_to 'Edit', edit_user_path(@user.id) %>

<%= render 'books/new_book', new_book:@new_book %>

<h2>Books</h2>
<table>
  <tr>
    <th></th>
    <th>Title</th>
    <th>Opinion</th>
  </tr>
  <% @book.each do |book| %>
    <tr>
      <td><%= attachment_image_tag book.user, :profile_image, :fill, 40, 40, format:'jpeg', fallback:"no_image.jpg", size:'40x40' %></td>
      <td><%= link_to book.title, book_path(book.id) %></td>
      <td><%= book.body %></td>
    </tr>
  <% end %>
</table>